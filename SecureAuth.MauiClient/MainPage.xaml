<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecureAuth.MauiClient.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label 
                Text="gRPC Client Login"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry x:Name="txtUsername" Placeholder="Username" />

            <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True" />

            <Button
                x:Name="LoginButton"
                Text="Get Token via gRPC"
                Clicked="OnLoginButtonClicked"
                HorizontalOptions="Center" />

            <Editor 
                x:Name="txtResult"
                Placeholder="Result will be shown here..."
                HeightRequest="250"
                IsReadOnly="True" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>